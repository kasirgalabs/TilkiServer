<% provide(:title, "My Courses") %>
<%= stylesheet_link_tag "sidebar.css" %>
<%= stylesheet_link_tag "card.css" %>


<body class="back-im">

<%= render 'sidebar' %>


<div class="main" style="font-family: Ubuntu;">
   <div class="col-md-offset-3 col-md-6">
      <h2 class="page-header">My Courses</h2>
      <% @my_courses.each do |cs| %>
      <% c = Course.find(cs.course_id) %>
      <% t = Teacher.find(c.teacher_id) %>
      <br> </br>
      <div class="row">
         <div class="card">
            <h3 class="card-header"><center><%= c.name %></center></h3>
            <div class="card-block">
                <p class="card-text"> <b>Course Teacher: </b><%= t.name %> <%= t.surname %></p>
                <p class="card-text"> <b>Course Description: </b><%= c.description %></p>
                <%= button_to 'Show Course', course_path(c), method: :get, class: 'btn btn-primary' %>
            </div>
         </div>
      </div>
      <% end %>
   </div>
</div>

</body>