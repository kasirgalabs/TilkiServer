<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for([:course, @exam]) do |f| %>
      <div class="form-group">
        <%= f.label :name, "Exam Name", class: "control-label" %> <br />
        <%= f.text_field :name, required: true, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :start_time, "Start Date", class: "control-label" %> <br />
        <%= f.datetime_select :start_time, required: true, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :finish_time, "Finish Date", class: "control-label" %> <br />
        <%= f.datetime_select :finish_time, required: true, class: "form-control" %>
      </div>
      
      <div class="form-actions">
        <%= f.submit "Submit", class: "btn btn-primary" %>
        <%= link_to "Back", course_path(params[:course_id]), class: "btn btn-primary" %>
      </div>
      
    <% end %>
  </div>
</div
