<% provide(:title, "Enroll Courses") %>
<%= stylesheet_link_tag "sidebar.css" %>
<%= stylesheet_link_tag "card.css" %>

<body class="back-im">

<%= render 'students/sidebar' %>

<div class="main" style="font-family: Ubuntu;">
   <div class="col-md-offset-3 col-md-6">
      <h2 class="page-header">Enroll Courses</h2>
      <% @courses.each do |f| %>
         <% if not CourseStudent.exists?(course_id: f.id, student_id: current_student.id)%>
            <br> </br>
            <div class="row">
               <div class="card">
                  <h3 class="card-header"><center><%= f.name %></center></h3>
                  <div class="card-block">
                      <p class="card-text"> <b>Course Teacher: </b><%= Teacher.find(f.teacher_id).name %> <%= Teacher.find(f.teacher_id).surname %></p>
                      <p class="card-text"> <b>Course Description: </b><%= f.description %></p>
                      <div class="btn-group">
                        <%= button_to 'Show Course', course_path(f), method: :get, class: 'btn btn-primary' %>
                        <%= button_to 'Enroll Course', enroll_path(f), method: :post, class: 'btn btn-primary' %>
                      </div>
                  </div>
               </div>
            </div>
         <% end %>
      <% end %>
   </div>
</div>


</body>